@model IEnumerable<TeamWorkApp.Models.TeamMember>

@{
    ViewBag.Title = "Seznam članov ekipe";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj novega člana", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TeamMemberID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TeamMemberID })
        </td>
    </tr>
}

</table>
