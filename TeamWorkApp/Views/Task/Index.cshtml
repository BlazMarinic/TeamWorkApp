@model IEnumerable<TeamWorkApp.Models.Task>

@{
    ViewBag.Title = "Seznam opravil";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj opravilo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Št.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskDueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskStatus)
        </th>
        <th>
            Assigned to
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    var dueDate = item.TaskDueDate.ToShortDateString();
    var taskName = $"Task_{item.TaskID}";
    var noOfTeamMembers = item.TeamMembers.Count;
    int i = 1;
    <tr>
        <td>
            @taskName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskDescription)
        </td>
        <td>
            @dueDate
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskStatus)
        </td>
        <td>
            
            @foreach (var t in item.TeamMembers)
            {
                <span>@t.Name</span>

                if (noOfTeamMembers == i)
                {
                    continue;
                }
                    
                <span>|</span>
                i++;
            }
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.TaskID }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.TaskID })
        </td>
    </tr>
}

</table>
